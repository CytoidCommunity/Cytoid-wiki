pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: $badgeTipColor;
  border-radius: 0px;
  & > code
    font-size: 14px !important;
    & > p
      margin: -5px 0 -20px 0;
    code
      background-color: $badgeTipColor !important;
      padding: 3px 5px;
      border-radius: 3px;
      color $indexTextColor
    em
      color $indexEMColor
      font-weight light

body.darkmode
  pre.vue-container
    border-color: $badgeTipColor;
    & > code
      code
        background-color: $badgeTipColor !important;
        color $indexTextColor
      em
        color $indexEMColor

dl
  *
    margin-bottom 1rem
  dt
    font-size 1rem
    font-weight 600
    margin-block-start 1rem
    margin-block-end 1rem
  dd 
    margin-left 32px
    line-height 1.7

