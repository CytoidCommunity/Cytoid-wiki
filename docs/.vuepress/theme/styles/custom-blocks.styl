.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color $customBlocksBGColor
    border-color $badgeTipColor
  &.warning
    background-color rgba(255,229,100,.3)
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
    a
      color $textColor
  &.danger
    background-color $customBlocksBG2Color
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
    a
      color $textColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color $subBorder2Color
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
  &.acard
    position: relative;
    background-color #00000003
    box-sizing: border-box;
    overflow: hidden;
    border-radius: 2px;
    box-shadow 0 3px 1px -2px #00000033, 0 2px 2px 0 #00000024, 0 1px 5px 0 #0000001f
    padding 16px 32px
    margin 16px 0
    &>*
      padding 8px
    .custom-block-title
      display none

// Dark Mode NEED RECHECKED

body.darkmode
  .custom-block
    translate color 0.2s, background 0.2s, border-bottom 0.2s ease
    &.tip
      background-color $customBlocksBGDarkColor
      border-color $badgeTipDarkColor
    &.warning
      background-color $indexBGDarkColor
      border-color darken($customBlocksWarnDarkColor, 35%)
      color darken($customBlocksWarnDarkColor, 70%)
      .custom-block-title
        color darken($customBlocksWarnDarkColor, 50%)
      a
        color $textDarkColor
      p
        color darken($customBlocksWarnDarkColor, 50%)
    &.danger
      background-color $indexBGDarkColor
      a
        color $textDarkColor
      p
        color $codeDarkColor
    &.details
      background-color $customBlocksBGDarkColor
    &.acard
      background-color #3a4046